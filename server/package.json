{
  "scripts": {
    "format": "prettier --write \"*/**/*.ts\"",
    "lint": "eslint --fix \"*/**/*.ts\"",
    "test": "NODE_ENV=test jest --forceExit --runInBand",
    "build": "tsc -p tsconfig.bulid.json",
    "start:dev": "ts-node-dev --watch src --ignore-watch \"spec.ts$\" src/bin/app.ts",
    "start:prod": "node build/bin/app",
    "migrate:create": "node-pg-migrate -m ./src/migrations -d POSTGRES_URL create",
    "migrate:up": "node-pg-migrate -m ./src/migrations -d POSTGRES_URL up",
    "seed": "npx ts-node src/bin/seed.ts"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-status-codes": "^1.4.0",
    "pg": "^8.0.3",
    "postgres-migrations": "^4.0.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@types/pg": "^7.14.3",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/parser": "^2.29.0",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "eslint": "^6.8.0",
    "execa": "^4.0.0",
    "get-port": "^5.1.1",
    "jest": "^25.4.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3",
    "ts-node": "^8.9.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --concurrent false"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
